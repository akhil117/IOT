<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="18"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#202124"
    tools:context=".Fragmentone">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_weight="3.4"
        android:id="@+id/spac"
        android:layout_height="wrap_content" />


    <GridLayout
        android:layout_width="match_parent"
        android:rowCount="1"
        android:layout_weight="3.7"
        android:columnCount="2"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="185dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="match_parent">
            
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_height="match_parent"    >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:background="#4A5060"
                android:weightSum="6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:id="@+id/Airconditioner"
                    android:layout_weight="3.8"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_flash" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:textColor="#B7C0C5"
                    android:text="@string/air_conditioner" />



            </LinearLayout>








            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="185dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_height="match_parent"    >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:background="#45BAC8"
                    android:weightSum="6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="fitCenter"
                        android:id="@+id/bulb"
                        android:layout_weight="3.8"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bulb" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#F9FAFA"
                        android:text="Lights" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>



    </GridLayout>
<android.support.v4.widget.Space
    android:layout_width="match_parent"
    android:layout_weight="0.6"
    android:layout_height="wrap_content" />
    <GridLayout

        android:layout_weight="2.5"
        android:rowCount="1"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="120dp"
           android:layout_row="0"
           android:layout_column="0"
           android:layout_height="match_parent"
           android:layout_marginStart="15dp">
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="match_parent">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal"
                  android:background="#45BAC8"
                  android:gravity="center"
                  android:weightSum="6">

                  <ImageView

                      android:layout_width="55dp"
                      android:layout_marginTop="3dp"
                      android:layout_height="match_parent"
                      android:id="@+id/therometer"
                      android:scaleType="fitStart"
                      android:src="@drawable/ic_thermometer" />
                  <TextView
                      android:layout_width="match_parent"
                      android:gravity="center"
                      android:textColor="#F9FAFA"
                      android:id="@+id/thermo"
                      android:layout_height="match_parent"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                      android:text="68°"/>











              </LinearLayout>





           </android.support.v7.widget.CardView>



       </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#B2CD1B"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/smoke"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_smoke" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="68°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#5E5C5D
"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_smoke" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="68°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>















    </GridLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:layout_height="wrap_content" />
    <GridLayout

        android:layout_weight="2.5"
        android:rowCount="1"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#373C45"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:id="@+id/cyclinder"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_g" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="68°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#45BAC8"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_smart_tv" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="68°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#F96451
"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_fire" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="68°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>















    </GridLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_weight="0.6"
        android:layout_height="wrap_content" />
    <GridLayout

        android:layout_weight="2.5"
        android:rowCount="1"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#EEBA29"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_smoke" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="68°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#9A6BEA"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_humidity" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="68°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#0F7CAE
"
                    android:gravity="center"
                    android:weightSum="6">

                    <ImageView

                        android:layout_width="55dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitStart"
                        android:src="@drawable/ic_siren" />
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textColor="#F9FAFA"
                        android:layout_height="match_parent"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:text="0/2°"/>











                </LinearLayout>





            </android.support.v7.widget.CardView>



        </LinearLayout>















    </GridLayout>


</LinearLayout>